@using Aula02.ViewModels.StudentCourses;
@model StudentCoursesViewModel

<h1>Create</h1>

<h4>Matrícula</h4>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-controller="StudentCourses">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
               <select asp-for="StudentId" class="form-control">

                   <option value="">Selecione um aluno</option>

                   @foreach (var student in Model.Students)
                     {
                          <option value="@student.ID">@student.FirstMidName @student.LastName</option>
                    }

               </select>
            </div>

            <div class="form-group">
                @for (int i = 0; i < Model.Courses.Count; i++)
                {
                    <div class="form-check">

                        <input class="checkbox"
                            asp-for="Courses[i].IsSelected"
                        class="form-check-input" />

                        <input type="hidden" asp-for="Courses[i].Id"/>

                        <label asp-for="Courses[i].IsSelected" class="form-check-label">
                            @Model.Courses[i].Name
                        </label>

                    </div>
                }
            </div>

            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>