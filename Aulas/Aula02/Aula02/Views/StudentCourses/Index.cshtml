@model ICollection<Aula02.Models.Student>

@{
    ViewData["Title"] = "Estudantes/Matrículas";
}

<div class="text-center">
    <h1 class="display-4">@Model.Count estudantes/matrículas.</h1>

    <a asp-action="Create" asp-controller="StudentCourses">Adicionar</a>

    <table class="table table-responsive table-hover table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Sobrenome</th>
                <th>Data da matrícula</th>
                <th></th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var s in Model)
            {
                <tr>
                    <td>@s.ID</td>
                    <td>@s.FirstMidName</td>
                    <td>@s.LastName</td>
                    <td>@s.EnrollmentDate.ToShortDateString()</td>
                    <td>
                        <form asp-controller="Home" asp-action="Delete" method="post">
                            <input type="hidden" name="id" value="@s.ID" />
                            <button type="submit" class="btn btn-danger btn-sm">Excluir</button>
                        </form>
                    </td>
                    <td>
                        <a asp-controller="Home" asp-action="Update" asp-route-id="@s.ID" method="get">
                            Editar
                        </a>
                    </td>
                </tr>

                @if(s.StudentCourses!.Count > 0)
                {

                    <tr>
                        <td colspan="5">
                            <ul>
                                @foreach (var sc in s.StudentCourses!)
                                    {
                                        <li> - @sc.Course?.Name</li>
                                    }
                            </ul>
                        </td>
                    </tr>
                }
            }
        </tbody>
</table>
</div>
